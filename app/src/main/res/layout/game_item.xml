<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- TextView für Team 1 -->
    <TextView
        android:id="@+id/team1_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Team 1"
        android:textSize="18sp"/>

    <!-- Trennlinie zwischen den Teams -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/black"/>

    <!-- TextView für Team 1 -->
    <TextView
        android:id="@+id/team2_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Team 1"
        android:textSize="18sp"/>

    <!-- EditText für die Eingabe der Tore für Team 1 -->
    <EditText
        android:id="@+id/goal1_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="Tore für Team 1"
        android:textSize="18sp"/>

    <!-- Trennlinie zwischen den Teams -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/black"/>

    <!-- EditText für die Eingabe der Tore für Team 2 -->
    <EditText
        android:id="@+id/goal2_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="Tore für Team 2"
        android:textSize="18sp"/>
</LinearLayout>
